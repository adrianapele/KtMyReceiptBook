<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/border"
        android:padding="4dp">

        <TextView
            android:id="@+id/listing_receipt_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/listing_receipt_short_desc_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listing_receipt_title_id"
            android:layout_margin="4dp"
            android:text="Short Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ImageView
            android:id="@+id/listing_receipt_image_id"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/listing_receipt_short_desc_id"
            android:layout_margin="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/no_image_available"
            android:contentDescription="Image" />
    </RelativeLayout>
</LinearLayout>